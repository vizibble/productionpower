<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vizibble | Admin Panel</title>
    <link rel="stylesheet" href="/CSS/output.css">
    <script src="https://unpkg.com/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
            appearance: textfield;
        }
    </style>
</head>

<body class="bg-gray-900 w-full h-full">
    <%- include('includes/navbar.ejs') %>
        <% if (locals.configs) { %>
            <main>
                <div class="relative shadow-md sm:rounded-lg overflow-x-auto">
                    <table class="w-full text-gray-400 text-sm text-left">
                        <thead class="bg-gray-700 text-gray-400 text-xs uppercase">
                            <tr>
                                <th class="px-6 py-3">Machine Name</th>
                                <th class="px-6 py-3">Product</th>
                                <th class="px-6 py-3">Operator</th>
                                <th class="px-6 py-3">Min/Max Voltage (V)</th>
                                <th class="px-6 py-3">Min/Max Current (A)</th>
                                <th class="px-6 py-3"><span class="sr-only">Edit</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% configs.forEach(device=> { %>
                                <tr class="bg-gray-800 hover:bg-gray-600 border-gray-700"
                                    data-device-id="<%= device.device_id %>">
                                    <td class="px-6 py-4 font-medium text-white whitespace-nowrap">
                                        <input type="text"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none font-mono text-black disabled:text-gray-400"
                                            value="<%= device.machine_name %>" disabled required name="machine_name">

                                    </td>
                                    <td class="px-6 py-4">
                                        <input type="text"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none font-mono text-black disabled:text-gray-400"
                                            value="<%= device.product %>" disabled required name="product">
                                    </td>
                                    <td class="px-6 py-4">
                                        <input type="text"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none font-mono text-black disabled:text-gray-400"
                                            value="<%= device.operator_name %>" disabled required name="operator">
                                    </td>
                                    <td class="px-6 py-4">
                                        <input type="number"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none w-10 font-mono text-black disabled:text-gray-400"
                                            value="<%= device.min_voltage %>" disabled required name="min_voltage">
                                        <span class="text-white">/</span>
                                        <input type="number"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none w-10 font-mono text-black disabled:text-gray-400"
                                            value="<%= device.max_voltage %>" disabled required name="max_voltage">
                                    </td>
                                    <td class="px-6 py-4">
                                        <input type="number"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none w-10 font-mono text-black disabled:text-gray-400"
                                            value="<%= device.min_current %>" disabled required name="min_current">
                                        <span class="text-white">/</span>
                                        <input type="number"
                                            class="disabled:bg-transparent px-2 py-1 rounded-xl outline-none w-10 font-mono text-black disabled:text-gray-400"
                                            value="<%= device.max_current %>" disabled required name="max_current">
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button class="font-medium text-blue-500 hover:underline edit">
                                            Edit
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>
            <% } %>
</body>

<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
<script src="/JavaScript/admin-panel/index.js"></script>

</html>